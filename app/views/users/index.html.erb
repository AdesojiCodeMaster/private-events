<% if current_user%>
<table>
<h3>All Available Event(s) </3>
<thead>
<tr>
  <th>Name</th>
  <th>Description</th>
  <th>Location</th>
  <th>Date</th>
  <th>Creator</th>
  <th colspan="2"></th>
</tr>
</thead>

<tbody>
<% Event.all.each do |event| %>
    <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.location %></td>
        <td><%= event.date %></td>
        <td><%= event.creator.try(:name) %></td>
        <td><%= link_to 'Show Event', event, class:'show' %></td>
        <td><%= link_to 'Attend Event', event_attending_path(event), method: :post, class:'attend' %></td>
      </tr>
   <% end %>
</tbody>
</table>
<%end%>