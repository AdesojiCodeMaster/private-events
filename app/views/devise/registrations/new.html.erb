<h2> Please SignUp Here</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, class:'extend1' %><br />
    <%= f.text_field :name, class:'extend' %>
  </div>

  <div class="field">
    <%= f.label :email, class:'extend1' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:'extend'%>
  </div>

  <div class="field">
    <%= f.label :password, class:'extend1' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:'extend'%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class:'extend1' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'extend' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>


